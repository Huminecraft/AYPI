package com.aypi.utils.xml;

import org.bukkit.entity.Player;

import java.util.ArrayList;
import java.util.jar.Attributes;

import com.aypi.Aypi;

public abstract class MCBalise {
	
	private String name;
	private String containt;
	
	private ArrayList<MCBalise> mcbs;
	
	public MCBalise(String name) {
		this.name = name;
		this.mcbs = new ArrayList<MCBalise>();
	}
	
	public abstract void setUpAttributes(Attributes attributes);
	
	public abstract void execute(Player player);
	
	public String getName() {
		return name;
	}
	
	public void setContaint(String value) {		
		this.containt = value;
	}
	
	public String getContaint() {
		return this.containt;
	}
	
	public void addChildren(MCBalise mcb) {
		this.mcbs.add(mcb);
	}
	
	public ArrayList<MCBalise> getChildrens() {
		return this.mcbs;
	}
	
	public boolean haveChildren() {
		return mcbs.size() > 0;
	}
	
}
