package com.aypi.utils.xml.balises;

import org.bukkit.Bukkit;
import org.bukkit.entity.Player;
import org.xml.sax.Attributes;

import com.aypi.utils.xml.MCBalise;

public class MessageBalise extends MCBalise {
	
	private final static String name = "message";
	
	private boolean broadcast = false;
	private String containt;
	
	public MessageBalise() {
		super(name);
	}

	@Override
	public void execute(Player player) {
		this.containt = this.containt.replaceAll("%PLAYER%", player.getName());
		if (!broadcast)
			player.sendMessage(this.containt);
		else
			Bukkit.broadcastMessage(this.containt);
	}
	
	@Override
	public void load(Attributes attributes) {
		String broadcast = attributes.getValue("broadcast");
		
		if (broadcast != null) {
			this.broadcast = Boolean.parseBoolean(broadcast);
		}
		
	}
	
	public void setContaint(String value) {		
		this.containt = value;
	}
	
	public String getContaint() {
		return this.containt;
	}

}
